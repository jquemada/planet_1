<div id="site">
 
  <h1><%= @site.type.name if @site.type %></h1> 

  <%= image_tag(@site.image_url, :class => 'site_image') %>

  <h3><%= @site.name %></h3> 

  <p><%=sanitize @site.description %></p>

  <div class="position"> 
    <span>
      <b>Latitude:</b>
      <%= @site.latitude %>
    </span>
 
    <span>
       <b>Longitude:</b>
       <%= @site.longitude %>
    </span>
  </div> 
</div> 

<p />
<%= link_to 'Edit', edit_site_path(@site) %> |
<%= link_to 'Back', sites_path %>
